---
import TagsList from './TagsList.astro';
import { machineDate, readableDate } from '../utils/dates';
import { slug } from '../utils/slug';

export let post: {
    url: string,
    title: string,
    date: string,
    summary: string,
    author: string,
    tags: string[]
}
---

<article class="post-preview">
    <div class="post-header">
        <h3>
            <a href={post.url}>
                {post.title}
            </a>
        </h3>
        <div class="post-meta">
            <time datetime={machineDate(post.date)}>
                {readableDate(post.date)}
            </time>
            <span class="separator">â€¢</span>
            <a href={`/author/${slug(post.author)}/`}>{post.author}</a>
        </div>
    </div>
    
    {post.summary && (
        <p class="post-summary">{post.summary}</p>
    )}
    
    {post.tags && (
        <div class="post-tags">
            <TagsList tags={post.tags} />
        </div>
    )}
</article>

<style lang="scss">
    .post-preview {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background-color: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        transition: all 0.2s ease;

        &:hover {
            box-shadow: var(--shadow-lg);
            border-color: var(--primary);
            transform: translateY(-2px);
        }

        &:last-child {
            margin-bottom: 0;
        }
    }

    .post-header {
        margin-bottom: 1rem;
    }

    .post-header h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.5rem;
        line-height: 1.3;
    }

    .post-header h3 a {
        color: var(--text-primary);
        text-decoration: none;
        transition: color 0.2s ease;

        &:hover {
            color: var(--primary);
        }
    }

    .post-meta {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--text-secondary);
        flex-wrap: wrap;
    }

    .separator {
        color: var(--border);
    }

    .post-meta a {
        color: var(--primary);
        text-decoration: none;
        font-weight: 500;

        &:hover {
            text-decoration: underline;
        }
    }

    .post-summary {
        color: var(--text-secondary);
        line-height: 1.6;
        margin: 0 0 1rem 0;
    }

    .post-tags {
        margin-top: 1rem;
    }

    @media screen and (min-width: 768px) {
        .post-preview {
            padding: 2rem;
        }

        .post-header h3 {
            font-size: 1.75rem;
        }
    }
</style>